<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/banner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Du hast dein Passwort vergessen?"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kein Problem, wenn du bei uns als User registriert bist. Gib einfach deine E-Mail Adresse ein und wir schicken dir ein Ãœbergangspasswort zu."
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edit_lostpassword_email"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="41dp"
        android:hint="@string/prompt_register_email"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_lostpassword_senden"
        android:layout_below="@+id/edit_lostpassword_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:hint="@string/action_lostpassword_senden" />
</RelativeLayout>