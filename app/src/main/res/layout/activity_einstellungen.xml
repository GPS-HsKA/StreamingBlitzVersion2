<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Einstellungen"
        android:id="@+id/textView10"
        android:singleLine="false"
        android:layout_marginTop="10px"
        android:layout_alignParentTop="true"
        android:background="#c1c1c1"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:autoText="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50px">

        <TableRow android:layout_marginTop="50px">
            <ImageView android:id="@+id/imageView_netflix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dip"
                android:paddingRight="5dip" android:src="@drawable/netflix_icon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" android:gravity="center_vertical">

                <TextView android:id="@+id/text_netflix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="50px"
                    android:text="Netflix"
                    android:layout_marginLeft="50px" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">

                <TextView android:id="@+id/text_einstellungen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="100px"
                    android:text="+"
                    android:layout_marginLeft="200px" />
            </LinearLayout>

        </TableRow>

        <TableRow android:layout_marginTop="20px">
            <ImageView android:id="@+id/imageView_amazon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dip"
                android:paddingRight="5dip" android:src="@drawable/amazon_logo_2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" android:gravity="center_vertical">

                <TextView android:id="@+id/text_amazon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="50px"
                    android:text="Amazon"
                    android:layout_marginLeft="50px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <TextView android:id="@+id/text_einstellungen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="100px"
                    android:text="+"
                    android:layout_marginLeft="200px" />
            </LinearLayout>

        </TableRow>

        <TableRow android:layout_marginTop="20px">
            <ImageView android:id="@+id/imageView_maxdome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dip"
                android:paddingRight="5dip" android:src="@drawable/maxdome_icon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" android:gravity="center_vertical">

                <TextView android:id="@+id/text_maxdome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="50px"
                    android:text="Maxdome"
                    android:layout_marginLeft="50px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <TextView android:id="@+id/text_einstellungen3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="100px"
                    android:text="+"
                    android:layout_marginLeft="200px" />
            </LinearLayout>

        </TableRow>

        <TableRow android:layout_marginTop="20px">
            <ImageView android:id="@+id/imageView_snap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dip"
                android:paddingRight="5dip" android:src="@drawable/snap_icon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" android:gravity="center_vertical">

                <TextView android:id="@+id/text_snap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="50px"
                    android:text="Snap"
                    android:layout_marginLeft="50px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <TextView android:id="@+id/text_einstellungen4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="100px"
                    android:text="+"
                    android:layout_marginLeft="200px" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

</RelativeLayout>