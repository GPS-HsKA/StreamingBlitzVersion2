<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Werbung"
        android:id="@+id/textView11"
        android:textSize="10dp"
        android:layout_marginTop="425dp" />

    <ImageView
        android:layout_width="800px"
        android:layout_height="250px"
        android:id="@+id/hilfe_werbung"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hilfe"
        android:id="@+id/textView10"
        android:singleLine="false"
        android:layout_marginTop="10px"
        android:layout_alignParentTop="true"
        android:background="#c1c1c1"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:autoText="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Über die Suche kannst du direkt nach Filmen oder Serien suchen."
        android:id="@+id/textView12"
        android:textColor="#000000"
        android:layout_marginLeft="250px"
        android:layout_column="1"
        android:layout_marginTop="30dp"
        android:textSize="13dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wenn du eine DVD- oder BluRay zur Hand hast, kannst du über Blitz Scan den Barcode scannen."
        android:id="@+id/textView13"
        android:textColor="#000000"
        android:layout_column="1"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10"
        android:layout_marginRight="40px"
        android:textSize="13dp"
        android:layout_alignEnd="@+id/imageView10" />

    <ImageView
        android:layout_width="350px"
        android:layout_height="350px"
        android:id="@+id/imageView10"
        android:src="@drawable/suchergebnisse"
        android:layout_above="@+id/hilfe_werbung"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginRight="20px" />

    <TextView
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Zu jeder Suche bieten wir dir eine Filmauswahl, aus welcher du deinen Titel auswählen kannst. Dir werden anschließend alle Plattformen angezeigt, auf welchen der Film verfügbar ist."
        android:id="@+id/textView14"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView13"
        android:layout_toEndOf="@+id/imageView10"
        android:layout_marginTop="150px"
        android:layout_marginLeft="15px" />

    <ImageView
        android:layout_width="250px"
        android:layout_height="400px"
        android:id="@+id/imageView11"
        android:src="@drawable/pfeil1"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/textView13" />

    <ImageView
        android:layout_width="250px"
        android:layout_height="250px"
        android:id="@+id/imageView12"
        android:src="@drawable/pfeil2"
        android:layout_alignTop="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:id="@+id/imageView13"
        android:src="@drawable/pfeil3"
        android:layout_marginTop="860px"
        android:layout_marginLeft="150px" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blitz Scan"
        android:id="@+id/button"
        android:layout_below="@+id/imageView12"
        android:layout_toEndOf="@+id/textView13"
        android:drawableLeft="@drawable/blitz_icon"/>

</RelativeLayout>